<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/about_image"
        android:layout_margin="10dp"
        android:src="@drawable/app_logo_1024"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_text"
        android:text="Did you find the gift? If you proceed the challenge will be complete and you will not be able to see the clues again."
        android:textStyle="normal"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/clues_confirm_yes_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Yes i found gift"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/next_button"
            android:textAllCaps="false"
            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/clues_confirm_see_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="I want to see the clues again"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:background="@drawable/skip_btn"
            android:layout_margin="15dp"/>

    </LinearLayout>

</LinearLayout>