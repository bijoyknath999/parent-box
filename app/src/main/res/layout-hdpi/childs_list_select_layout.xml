<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/childs_select_image_text"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/profile_bg_text"
            android:text="A"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/childs_select_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="Childs Name"
                android:maxLines="3"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLength="50"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/childs_select_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="140"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:text="DOB : 08/2022"/>
            <TextView
                android:id="@+id/childs_select_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="140"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:maxLines="1"
                android:text="8 years old"/>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>