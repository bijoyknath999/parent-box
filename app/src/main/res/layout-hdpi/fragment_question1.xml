<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Quiz.FragmentQuestion1"
    android:background="@color/quizbgColor"
    android:id="@+id/create_question_layout_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/create_question1_submit"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_question1_question_no"
                    android:text="Question 1"
                    android:textColor="@color/quiztextColor"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/5"
                    android:textColor="@color/quiztextColor"
                    android:textSize="20sp"
                    android:textStyle="normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/create_question1_question"
                    android:hint="Enter the question here!!"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorLink="@android:color/white"
                    android:textColorHighlight="@android:color/transparent"
                    android:textColorHint="@color/grey"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:background="@android:color/transparent"
                    android:textSize="20sp"
                    android:maxLines="5"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"/>


                <EditText
                    android:id="@+id/create_question1_option_one"
                    android:textColorHint="@color/grey"
                    android:hint="Enter option one"
                    android:textColor="@android:color/white"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorLink="@android:color/white"
                    android:textColorHighlight="@android:color/transparent"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:cursorVisible="true"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/quiz_button_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/create_question1_option_two"
                    android:textColorHint="@color/grey"
                    android:hint="Enter option two"
                    android:textColor="@android:color/white"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorLink="@android:color/white"
                    android:textColorHighlight="@android:color/transparent"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textSize="16sp"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/quiz_button_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/create_question1_option_three"
                    android:textColorHint="@color/grey"
                    android:hint="Enter option three"
                    android:textColor="@android:color/white"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorLink="@android:color/white"
                    android:textColorHighlight="@android:color/transparent"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textSize="16sp"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:maxLines="5"
                    android:background="@drawable/quiz_button_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correct answer option no"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/create_question1_option_correct_ans"
                    android:textColorHint="@color/grey"
                    android:hint="Example : 1"
                    android:textColor="@android:color/white"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textColorLink="@android:color/white"
                    android:textColorHighlight="@android:color/transparent"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textSize="16sp"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:inputType="number"
                    android:digits="123"
                    android:maxLength="1"
                    android:imeOptions="actionDone"
                    android:background="@drawable/quiz_button_border"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="end"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/create_question1_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Question"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="@drawable/next_button"
        android:textAllCaps="false"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

</RelativeLayout>