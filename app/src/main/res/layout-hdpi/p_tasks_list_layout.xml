<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp">

    <ImageView
        android:id="@+id/parents_task_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_splash"/>

        <TextView
            android:id="@+id/parents_task_image_text"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/profile_bg_text"
            android:text="A"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parents_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Abraham Lincolnnnndakkc kslxkasnllas snlksalxkas skxlask slkxasl"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="3"
            android:maxLength="50"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/parents_task_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:text="Select a topic from our template for your child to read and answer to."/>

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>