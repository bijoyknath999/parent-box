<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockScreen"
    android:orientation="vertical"
    android:background="@color/quizbgColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lock_title"
        android:text="Final Step"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lock_description"
        android:padding="10dp"
        android:text="@string/lockdesc"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/abel_regular"
        android:layout_marginTop="60dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/lock_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@android:color/white"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_lock"
            android:tooltipText="Lock"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

    </ScrollView>

    </RelativeLayout>
