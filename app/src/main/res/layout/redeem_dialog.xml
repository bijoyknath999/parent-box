<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:padding="20dp"
    app:cardElevation="8dp"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:id="@+id/trophy_redeem_dialog_image"/>

        <EditText
            android:textColorHint="@color/quizbgColor"
            android:id="@+id/trophy_redeem_dialog_edittext"
            android:hint="Enter number of trophies to remove"
            android:textColor="@color/quizbgColor"
            android:textCursorDrawable="@drawable/custom_cursor_black"
            android:textColorLink="@android:color/black"
            android:textColorHighlight="@android:color/transparent"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:maxLength="4"
            android:inputType="number"
            android:scrollbars="vertical"
            android:background="@drawable/quiz_button_border"
            android:layout_width="match_parent"
            android:cursorVisible="true"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/trophy_redeem_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exchange for gifts given"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/next_button"
            android:textAllCaps="false"
            android:layout_margin="20dp"
            android:gravity="center"/>
    </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>